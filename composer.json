{
	"name": "LAZ",
	"description": "Open Source social network",
	"keywords": ["B2B Apps", "Metrics", "Social Network"],
	"license": "no-license",
	"type": "project",
	"authors": [
		{
		"name": "Rudy Jessop",
		"email":"rudyjessop@gmail.com",
		"homepage": "http://ctlabs.net"
		}
	],
	"require": {
		"laravel/framework": "5.0.*",
		"parse/php-sdk": "1.0.*",
		"illuminate/html": "^5.0",
		"intervention/image": "*"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1",
		"mockery/mockery": "~0.9.2"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"App\\": "app/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
